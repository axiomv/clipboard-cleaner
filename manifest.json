{
  "manifest_version": 3,
  "name": "Clipboard Cleaner",
  "version": "1.1",
  "description": "Removes unwanted content added to the clipboard by websites.",
  "permissions": ["storage"],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
