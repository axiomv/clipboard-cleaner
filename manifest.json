{
  "manifest_version": 3,
  "name": "Clipboard Cleaner",
  "version": "1.2",
  "description": "Cleans injected clipboard content on copy.",
  "applications": {
    "gecko": {
      "id": "clipboardcleaner@lol.com"  // Replace with your unique ID
    }
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  }
}
